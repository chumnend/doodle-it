{
  "private": true,
  "name": "doodle-it",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "client": "yarn workspace doodle-it-ui serve",
    "server": "yarn workspace doodle-it-api start",
    "prestart": "yarn workspace doodle-it-ui build",
    "start": "concurrently --kill-others-on-fail \"yarn client\"  \"yarn server\""
  },
  "dependencies": {
    "concurrently": "^6.2.0"
  }
}
